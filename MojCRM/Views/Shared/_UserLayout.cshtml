<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Moj-CRM</title>
    <link href="~/Content/ikona-preglednik.ico" rel="shortcut icon" type="image/x-icon" />

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts")
    @Styles.Render("~/Content/css")

    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
</head>
<body>
    <!--Header Wrapper-->
    <div class="special-wrap" style="background-color:lavender">
        <nav id="navbar-top" style="text-align: justify; background-color: lavender; border-color: lavender; margin-bottom: 0px" ; class="navbar navbar-default navbar-static-top">
            <div class="container">
                <div class="navbar-header" style="color: lavender">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a id="logo" class="navbar-brand" style="margin-top: 0px;margin-bottom: 0px;padding-bottom: 0px;padding-top: 0px">
                        <img alt="Moj-CRM logo" src="@Url.Content("~/Content/CRM_logo_source-krivulje.tekst.svg")" />
                    </a>
                </div>
                <div class="navbar-collapse collapse" style="margin: 15px">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    </div>
    <div id="main-wrapper" style="background-color:lavender">
        <div class="container body-content" style="background-color:white">
            <form class="form-inline">
                <div class="row" style="padding-top:6px; margin-top:6px">
                    <div class="col-md-12">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-default">
                            Početna
                        </a>
                        <a href="@Url.Action("Index", "Delivery")" class="btn btn-default">
                            Kartice
                        </a>
                        @*<div class="btn-group dropdown">
                            <button role="button" class="btn btn-default dropdown-toggle" type="button" id="deliveryDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dostava <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="deliveryDropdown" role="menu">
                                <li><a href="@Url.Action("Index", "Delivery")">Kartice</a></li>
                                <li><a href="@Url.Action("Contacts", "Delivery")">Kontakti dostave</a></li>
                            </ul>
                        </div>*@
                        <a href="@Url.Action("Index", "Contact")" class="btn btn-default">
                            Kontakti
                        </a>
                        <a href="@Url.Action("Index", "Stats")" class="btn btn-default">
                            Izvještaji
                        </a>
                        @if (User.IsInRole("Superadmin"))
                        {
                            <a href="@Url.Action("Index", "Administration")" class="btn btn-default">
                                Administracija sustava
                            </a>
                        }
                    </div>
                </div>
            </form>
            <hr />
            @RenderBody()
            @RenderSection("SPAViews", required: false)
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Elektronički računi d.o.o.</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
