<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Moj-CRM</title>
    <link href="~/Content/ikona-preglednik.ico" rel="shortcut icon" type="image/x-icon" />

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/scripts")
    @Styles.Render("~/Content/css")

    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
</head>
<body class="sidebar-fixed topnav-fixed dashboard">
    <!--Wrapper-->
    <div class="wrapper" id="wrapper">
        <!--Top Bar-->
        <div class="top-bar navbar-fixed-top">
            <div class="container">
                <div class="clearfix">
                    <a href="#" class="pull-left toggle-sidebar-collapse"><i class="fa fa-bars"></i></a>
                    <div class="pull-left left logo">
                        <a href="index.html"><img alt="Moj-CRM logo" src="@Url.Content("~/Content/CRM_logo_source-krivulje.tekst.svg")" height="37" /></a>
                    </div>
                    <div class="pull-right right">
                        <!--Logged user-->
                        <div class="logged-user">
                            <div class="btn-group">
                                <a href="#" class="btn btn-link dropdown-toggle" data-toggle="dropdown">
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">
                                            <i class="fa fa-user"></i>
                                            <span class="text">Korisnički profil</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fa fa-cog"></i>
                                            <span class="text">Postavke</span>
                                        </a>
                                    </li>
                                    <li>
                                        @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
                                        {
                                            <a href="javascript:sessionStorage.removeItem('accessToken');$('#logoutForm').submit();">
                                                <i class="fa fa-power-off"></i>
                                                <span class="text">Odjavi se</span>
                                            </a>
                                        }
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Left Sidebar-->
        <div id="left-sidebar" class="left-sidebar ">
            <div class="sidebar-scroll">
                <nav class="main-nav">
                    <ul class="main-menu">
                        <li class="active">
                            <a href="@Url.RouteUrl(new { action = "Index", controller = "Home", area = ""})" class="js-sub-menu-toggle"><i class="fa fa-home"></i><span class="text">Početna</span></a>
                        </li>
                        <li class="active">
                            <a href="#" class="js-sub-menu-toggle">
                                <i class="fa fa-list"></i><span class="text">Popisi</span>
                                <i class="toggle-icon fa fa-angle-left"></i>
                            </a>
                            <ul class="sub-menu ">
                                <li><a href="@Url.RouteUrl(new { action = "Index", controller = "Organizations", area = ""})"><span class="text">Tvrtke</span></a></li>
                                <li><a href="@Url.RouteUrl(new { action = "Index", controller = "Contacts", area = ""})"><span class="text">Kontakti</span></a></li>
                            </ul> 
                        </li>
                        @if (User.IsInRole("Management") || User.IsInRole("Board") || User.IsInRole("Administrator") || User.IsInRole("Superadmin"))
                        {
                            <li>
                                <a href="@Url.RouteUrl(new { action = "Index", controller = "Campaigns", area = "Campaigns"})" class="js-sub-menu-toggle"><i class="fa fa-phone"></i><span class="text">Kampanje</span></a>
                            </li>
                        }
                        <li class="active">
                            <a href="#" class="js-sub-menu-toggle">
                                <i class="fa fa-dashboard fa-fw"></i><span class="text">Dashboard</span>
                                <i class="toggle-icon fa fa-angle-down"></i>
                            </a>
                            <ul class="sub-menu open">
                                <li class="active"><a href="index.html"><span class="text">Dashboard v1</span></a></li>
                                <li><a href="index-transparent.html"><span class="text">Dashboard v1 Transp.</span></a></li>
                                <li><a href="index-dashboard-v2.html"><span class="text">Dashboard v2</span></a></li>
                                <li><a href="index-dashboard-v2-transparent.html"><span class="text">Dashboard v2 Trans.</span></a></li>
                                <li><a href="index-dashboard-v3.html"><span class="text">Dashboard v3</span></a></li>
                                <li><a href="index-dashboard-v4.html"><span class="text">Dashboard v4 <span class="badge element-bg-color-blue">New</span></span></a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <!--Main Content-->
        <div id="main-content-wrapper" class="content-wrapper ">
            <div class="alert alert-danger top-general-alert">
                <span><strong>Ovo je novi dizajn Moj-CRM sustava. Molimo za razumijevanje u slučaju inicijalnih poteškoća u radu. Zahvaljujemo na razumijevanju.</strong> Moj-CRM Development Team</span>
                <button type="button" class="close">&times;</button>
            </div>
            <hr />
            @RenderBody()
            @RenderSection("SPAViews", required: false)
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Elektronički računi d.o.o.</p>
            </footer>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
<script>
        $('.dropdown-toggle').dropdown()
</script>
