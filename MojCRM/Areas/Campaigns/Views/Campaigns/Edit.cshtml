@model MojCRM.Areas.Campaigns.Models.Campaign

@{
    ViewBag.Title = "Uređivanje kampanje";
    Layout = "~/Views/Shared/_UserLayoutNew.cshtml";
}

<h2 style="text-align:center"><strong>Uređivanje kampanje</strong></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="text-align:center">Kampanja - @Html.Raw(Model.CampaignName)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="hidden">
            @Html.Hidden("CampaignId", ViewBag.CurrentFilter as string, new { @class = "form-control", @type = "text", @Value = Model.CampaignId })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CampaignName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("CampaignName", ViewBag.CurrentFilter as string, new { @class = "form-control", @type = "text", @Value = Model.CampaignName })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CampaignDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("CampaignDescription", ViewBag.CurrentFilter as string, new { @class = "form-control", @type = "text", @Value = Model.CampaignDescription })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CampaignStartDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("StartDate", ViewBag.CurrentFilter as string, new { @class = "date-picker form-control", @type = "text", @placeholder = Model.CampaignStartDate })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CampaignPlannedEndDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("PlannedEndDate", ViewBag.CurrentFilter as string, new { @class = "date-picker form-control", @type = "text", @placeholder = Model.CampaignPlannedEndDate })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-sm btn-default" title="Spremi promjene"><i class="fa fa-save"></i></button>
                <a href="@Url.RouteUrl(new { action = "Index", controller = "Campaigns", area = "Campaigns", returnUrl = Request.Url})" class="btn btn-sm btn-default" title="Povratak na popis kampanja"><i class="fa fa-arrow-left"></i></a>
            </div>
        </div>
    </div>
}
