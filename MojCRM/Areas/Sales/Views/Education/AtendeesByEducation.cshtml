@model List<MojCRM.Areas.Sales.Helpers.AtendeesByEducationStatHelper>
@{
    ViewBag.Title = "Broj polaznika po edukacijama";
    Layout = "~/Views/Shared/_UserLayoutNew.cshtml";
}

<h2>Broj polaznika po edukacijama</h2>
<br />
<div class="alert alert-info">
    <p style="text-align: justify">
        Ovaj pregled donosi podatke o broju polaznika edukacija koje su obrađene kao kampanje u sustavu.<br />
    </p>
</div>
<hr />

<div class="row">
    <div class="widget widget-table">
        <div class="widget-header">
            <h3><i class="fa fa-money"></i> Pregled podataka</h3> <em>- Broj polaznika po edukaciji</em>
            <div class="btn-group widget-header-toolbar">
                <a href="#" title="Fokusiraj" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
                <a href="#" title="Proširi/Sažmi" class="btn-borderless btn-toggle-expand"><i class="fa fa-chevron-up"></i></a>
                @*<a href="#" title="Remove" class="btn-borderless btn-remove"><i class="fa fa-times"></i></a>*@
            </div>
        </div>
        <div class="widget-content">
            <table id="ticket-table" class="table table-sorting">
                <thead>
                    <tr>
                        <th>Naziv kampanje / edukacije</th>
                        <th>Početak kampanje</th>
                        <th>Planirani završetak kampanje</th>
                        <th>Broj polaznika</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var res in Model)
                    {
                        <tr>
                            <td>@res.EducationName</td>
                            <td>@res.CampaignStartDate</td>
                            <td>@res.CampaignPlannedEndDate</td>
                            <td><strong style="color:red">@res.Atendees</strong></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

